# =========================================
# OpenID Connect / OAuth2 Configuration
# =========================================

# The base URL of your OIDC provider (Authorization Server)
OIDC_ISSUER_URL=https://localhost:8444/kc/realms/test

# Client ID registered with the OIDC provider
CLIENT_ID=oauth2-pkce-flow

# Client Secret (if applicable; PKCE can work without it)
# CLIENT_SECRET=your-client-secret

# The redirect URI registered in the OIDC provider
REDIRECT_URI=http://localhost:3000/callback

# Scopes to request, include offline_access for refresh tokens
OIDC_SCOPES=openid profile email offline_access

# =========================================
# Session Configuration
# =========================================

# Secret for signing session cookies
SESSION_SECRET=super-secret-session-key

# Session cookie name
SESSION_COOKIE_NAME=bff_session

# =========================================
# BFF / Proxy Configuration
# =========================================

# Frontend base URL (used for redirects after login)
FRONTEND_URL=http://localhost:5173

# Backend service URLs
SERVICE1_URL=https://localhost:8085
SERVICE2_URL=https://localhost:8084

# Port for the BFF server
PORT=3000

# =========================================
# Optional Security / Misc
# =========================================

# Force HTTPS cookies in production
COOKIE_SECURE=false
